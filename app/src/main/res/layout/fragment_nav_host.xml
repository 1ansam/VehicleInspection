<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".view.fragment.NavHostFragment">




    <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline11"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.1" />


    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/lightBlue"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvChoiceFunction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selectFunctionTitle"
            android:textColor="@color/grey"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline11"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/btnRegisterFunc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/notRegisterVehicleInspection"
                android:textSize="24sp"
                android:visibility="gone"
                app:drawableLeftCompat="@drawable/ic_register"
                app:drawableRightCompat="@drawable/ic_next" />

            <TextView
                android:id="@+id/btnAppointmentAj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="40dp"
                android:gravity="start|center_vertical"
                android:text="预约查询及注册登记"
                android:textSize="24sp"
                app:drawableLeftCompat="@drawable/ic_sign"
                app:drawableRightCompat="@drawable/ic_next" />

            <TextView
                android:id="@+id/btnChargeFunc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="40dp"
                android:gravity="start|center_vertical"
                android:text="@string/charge"
                android:textSize="24sp"
                app:drawableLeftCompat="@drawable/ic_cny"
                app:drawableRightCompat="@drawable/ic_next" />

            <TextView
                android:id="@+id/btnVehicleInspectionFunc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="40dp"
                android:gravity="start|center_vertical"
                android:text="@string/personInspectionItem"
                android:textSize="24sp"
                app:drawableLeftCompat="@drawable/ic_searcher"
                app:drawableRightCompat="@drawable/ic_next" />

            <TextView
                android:id="@+id/btnReplenishFunc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="40dp"
                android:gravity="start|center_vertical"
                android:text="数据补传"
                android:textSize="24sp"
                app:drawableLeftCompat="@drawable/ic_dispatch"
                app:drawableRightCompat="@drawable/ic_next" />

            <TextView
                android:id="@+id/btnVerifySignatureFunc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="40dp"
                android:gravity="start|center_vertical"
                android:text="@string/verifySignature"
                android:textSize="24sp"
                app:drawableLeftCompat="@drawable/ic_verify_signature"
                app:drawableRightCompat="@drawable/ic_next" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>